{{!
    @template format_remuiformat/allactivities


    Example context (json):
    {
        "section": "1",
        "leftnav": "1/0",
        "rightnav": "1/0",
        "leftside": "leftside options"
        "optionmenu": "rightside optionmenu"
        "title": "General Section 1",
        "summary": "General Section summary",
        "activities": [
         {
            "index": "index",
            "id": "id",
            "completion": "completion",
            "viewurl": "viewurl",
            "title": "title",
            "modulename": "modulename",
            "summary": "summary",
            "completed": "completed",
            "hidden": "hidden",
            "availstatus": "availstatus",
            "modicons": "modicons",
         }
        ],
        "addnewactivity": "1/0",
        "remuicourseformatcard": "1/0",
    }
}}

{{#hiddensection}}
    {{{ hiddensection }}}
{{/hiddensection}}
{{^hiddensection}}

    <div class="col-md-12 p-0 general-single-card p-15 p-3 mb-30 mb-4 m-b-2">
        <span class="sno {{^hidden}}text-primary{{/hidden}}{{#hidden}}text-muted{{/hidden}}">{{ section }}&#46;&nbsp;&nbsp;&nbsp;&nbsp;</span>
        <h2 class="single-section-title {{#hidden}}text-muted{{/hidden}}">{{{ title }}}</h2>
        <p>{{{ summary }}}</p>
    </div>
    <div>
        <div class="cards">
            <div id="section-{{section}}" class="section wdm-card-single-section">
                {{#editing}}
                <div class="right">
                    {{{ optionmenu }}}
                </div>
                {{/editing}}
                <div class="content w-full">
                    <ul class="row wdm-section-wrapper">
                    {{#activities}}

                        <li class="{{#layouttypecol}}col-lg-4 col-md-6 col-sm-12{{/layouttypecol}} {{#layouttyperow}}col-12{{/layouttyperow}} single-card-container px-15 modtype_{{{modulename}}}" id="module-{{id}}" data-id ="{{ id }}" data-section="{{ section }}" >
                            {{#layouttypecol}}
                                {{#label}}
                                    <a href="{{viewurl}}" data-toggle="modal" data-target="#{{viewurl}}">
                                {{/label}}
                            {{/layouttypecol}}
                                <div class="single-card {{#layouttypecol}}wdm-col{{/layouttypecol}}{{#layouttyperow}}wdm-min-row {{#label}}wdm-row{{/label}}{{/layouttyperow}} p-15 p-3 p-x-1 p-y-1 m-b-2 mb-25 mb-4">
                                    {{#editing}}
                                        <a class="wdm-drag-drop"><span><i class="fa fa-arrows" aria-hidden="true"></i></span></a>
                                    {{/editing}}
                                    <div class="wdm-activity-actions d-flex">
                                        <div class="wdm-mod-name {{#hidden}}text-muted{{/hidden}}">{{#layouttypecol}}{{ modulename }}{{/layouttypecol}}</div>
                                        <div class="wdm-activity-actions d-flex">
                                            {{#editing}}
                                                {{#layouttyperow}}
                                                    <span id="wdmshowinrow" class="wdm-show-in-row btn btn-light" data-wdmsectionid="{{ section }}" data-wdmactivityid="{{ id }}">{{#str}} showincard, format_remuiformat{{/str}}</span>
                                                {{/layouttyperow}}
                                                {{#layouttypecol}}
                                                    <span id="wdmshowinrow" class="wdm-show-in-row btn btn-light" data-wdmsectionid="{{ section }}" data-wdmactivityid="{{ id }}">{{#str}} showinrow, format_remuiformat{{/str}}</span>
                                                {{/layouttypecol}}
                                            {{/editing}}
                                            {{{ modicons }}}
                                        </div>
                                    </div>
                                    <h4 class="wdm-single-activity-title {{^summary}}nosummary{{/summary}}">{{{ title }}}</h4>

                                    <div class="{{^summary}}nosummary{{/summary}}">{{{ availstatus }}}</div>
                                    
                                    {{#summary}}
                                        <div class="pt-10 mb-10">
                                            {{{ summary }}}
                                        </div>
                                    {{/summary}}
                                    
                                    {{^availstatus}}
                                    <div class="d-flex wdm-bottom-container card-bottom {{#hidden}}text-muted{{/hidden}}{{^fullcontent}}{{^hidden}}text-primary{{/hidden}}{{/fullcontent}}">
                                        <div class="flex-1 pl-15 p-l-1">
                                                <!-- show open modal button in case of label activity -->
                                                {{#fullcontent}}
                                                    {{#summary}}
                                                    {{#hidefornow}}
                                                        {{#layouttyperow}}
                                                            {{^label}}
                                                                <a href="{{viewurl}}" class="btn {{^hidden}}btn-primary{{/hidden}} {{#hidden}}btn-dark{{/hidden}}">{{#str}}viewtopic, format_remuiformat{{/str}}</a>
                                                            {{/label}}
                                                        {{/layouttyperow}}
                                                        {{#layouttypecol}}
                                                            {{#label}}
                                                                <a href="{{viewurl}}" data-toggle="modal" data-target="#{{viewurl}}" class="btn {{^hidden}}btn-primary{{/hidden}} {{#hidden}}btn-dark{{/hidden}}">{{#str}}viewtopic, format_remuiformat{{/str}}</a>
                                                            {{/label}}
                                                            {{^label}}
                                                                <a href="{{viewurl}}" class="btn {{^hidden}}btn-primary{{/hidden}} {{#hidden}}btn-dark{{/hidden}}">{{#str}}viewtopic, format_remuiformat{{/str}}</a>
                                                            {{/label}}
                                                        {{/layouttypecol}}
                                                    {{/hidefornow}}
                        
                                                        <!-- The Modal -->
                                                        <div class="modal" id="{{viewurl}}">
                                                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
                                                                <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h4 class="modal-title"></h4>
                                                                    <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                                                                </div>
                                                                <!-- Modal body -->
                                                                <div class="modal-body">
                                                                    {{{fullcontent}}}
                                                                </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {{/summary}}
                                                {{/fullcontent}}
                                                {{#hidefornow}}
                                                    {{#layouttypecol}}
                                                        {{^fullcontent}}
                                                            <a href="{{viewurl}}" class="btn {{^hidden}}btn-primary{{/hidden}} {{#hidden}}btn-dark{{/hidden}}">{{#str}}viewtopic, format_remuiformat{{/str}}</a>
                                                        {{/fullcontent}}
                                                    {{/layouttypecol}}
                                                {{/hidefornow}}
                                            </div>
                                        {{#completion}}
                                        <div class="wdm-completion-container align-items-center pr-15 p-r-1 {{^completed}}text-muted{{/completed}}">
                                            <div class="wdm-completion-check-{{id}}">
                                                <span class="m-0 text-right wdm-completion-title wdm-completion-status-{{id}}" style="display: inline;">
                                                    {{^autocompletion}}
                                                        {{^label}}
                                                            {{#completed}}
                                                                {{#str}} completed, format_remuiformat{{/str}}
                                                            {{/completed}}
                                                            {{^completed}}
                                                                {{#str}} markcomplete, format_remuiformat{{/str}}
                                                            {{/completed}}
                                                        {{/label}}                                                           
                                                    {{/autocompletion}}
                                                </span>
                                                {{{ completion }}}
                                            </div>
                                        </div>
                                        {{/completion}}
                                    </div>
                                    {{/availstatus}}
                                </div>
                            {{#layouttypecol}}
                                {{#label}}
                                    </a>
                                {{/label}}
                            {{/layouttypecol}}
                        </li>
                    {{/activities}}
                    </ul>
                </div>
                {{{ addnewactivity }}}
                {{#editing}}
                    <span class='wdm-change-layout-notify bg-primary'>{{#str}} changelayoutnotify, format_remuiformat{{/str}}</span>
                {{/editing}}
            </li>
        </ul>
    </div>

    <!-- next/prev sections -->
    <div class="col-md-12 p-0 wdm-card-section">
        <div class="card-section-leftnav">
            {{{ leftnav }}}
        </div>
        <div class="card-section-rightnav">
            {{{ rightnav }}}
        </div>
    </div>
{{/hiddensection}}
